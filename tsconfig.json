{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"]

  },
  "exclude": [
    "node_modules",
    "packages/*/node_modules",
    "packages/*/dist",
    "packages/*/coverage"
  ]
}
